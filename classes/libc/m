/*
 *  Template for C library function mkdir.  We use two parameters
 *  so we don't get any confusion with the mkdir([2-3]) prototypes.
 */

#include <ctalkdefs.h>

#define mkdir \n\
cMkdir (char *__d, int __m) { \n\
  int r; \n\
  char buf[MAXLABEL]; \n\
  r = mkdir (__ctalk_to_c_char_ptr(ARG(1)), CTALK_DIRECTORY_MODE); \n\
  sprintf (buf, "%d", r); \n\
  return __ctalkCreateObjectInit ("result", "Integer", \n\
     "Magnitude", LOCAL_VAR, buf); \n\
}

