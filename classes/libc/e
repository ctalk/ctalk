/*
 *  Templates for erf(), erfc(), exp(), and expm1() C library functions.
 */

#include <ctalkdefs.h>

#define erf \n\
cErf (double d) {\n\
  char buf[MAXLABEL]; \n\
  __ctalkDoubleToASCII (erf (__ctalk_to_c_double(ARG(0))), buf); \n\
  return __ctalkCreateObjectInit ("result", "Float", \n\
     "Magnitude", LOCAL_VAR, buf); \n\
}

#define erfc \n\
cErfc (double d) {\n\
  char buf[MAXLABEL]; \n\
  __ctalkDoubleToASCII (erfc (__ctalk_to_c_double(ARG(0))), buf); \n\
  return __ctalkCreateObjectInit ("result", "Float", \n\
     "Magnitude", LOCAL_VAR, buf); \n\
}

#define exp \n\
cExp (double d) {\n\
  char buf[MAXLABEL]; \n\
  __ctalkDoubleToASCII (exp (__ctalk_to_c_double(ARG(0))), buf); \n\
  return __ctalkCreateObjectInit ("result", "Float", \n\
     "Magnitude", LOCAL_VAR, buf); \n\
}

#define expm1 \n\
cExpm1 (double d) {\n\
  char buf[MAXLABEL]; \n\
  __ctalkDoubleToASCII (expm1 (__ctalk_to_c_double(ARG(0))), buf); \n\
  return __ctalkCreateObjectInit ("result", "Float", \n\
     "Magnitude", LOCAL_VAR, buf); \n\
}
