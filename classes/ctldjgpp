  int parser_lvl, 
    error_line,
    error_col;
  RT_INFO rtinfo;
  EXCEPTION exception;
  SYMBOL *unresolved_classes,
    *unresolved_symbols;
  char text[MAXMSG];
  struct _i_exception *next,
    *prev;
};
#undef __need_i_exception
#endif

#endif /* LIB_BUILD */

